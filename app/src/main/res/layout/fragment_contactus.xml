<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kalagitech.android.skc.MainActivity"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_address_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_address"
            android:textSize="16dp"
            android:drawableLeft="@drawable/img_address"
            android:drawablePadding="10dp"/>
        <TextView
            android:id="@+id/txt_email_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_email"
            android:textSize="16dp"
            android:clickable="true"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/img_email"
            android:drawablePadding="10dp"/>

        <TextView
            android:id="@+id/txt_mobilenumber_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_mobilenumber"
            android:textSize="16dp"
            android:clickable="true"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/img_mobile"
            android:drawablePadding="10dp"/>
        <TextView
            android:id="@+id/txt_landlinenumber_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_landlinenumber"
            android:textSize="16dp"
            android:clickable="true"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/img_phone"
            android:drawablePadding="10dp"/>

    </LinearLayout>

</LinearLayout>
